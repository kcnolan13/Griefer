                other.draw_challenge_splash_text += 2
            other.icon_ref = icon
            other.top = top
            other.left = left
            other.right = right
            other.chal_id = id
            
            draw_popup_challenge(cursor.x, cursor.y, name, "", desc, icon, color_complete, 1,1)
        }   
